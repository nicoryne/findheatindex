{
  "hosting": {
    "public": "public",
    "header": [
      { "source": "*.html", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] },
      { "source": "*.css", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000" }] }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
